    "build:vercel": "NODE_ENV=production node build-fix.js && vite build --outDir dist --mode production",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0", 
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "verify": "node verify-deployment.js",
    "fix": "node build-fix.js",
    "optimize": "node optimize-build.js",
    "clean": "rm -rf node_modules package-lock.json && npm install --legacy-peer-deps"
